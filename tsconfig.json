{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "types/*": ["./types/*"],
      "navigators/*": ["./navigators/*"],
      "models/*": ["./models/*"],
      "constants/*": ["./constants/*"],
      "assets/*": ["./assets/*"],
      "utils/*": ["./utils/*"],
    }
  }
}
